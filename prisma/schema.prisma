generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movies {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  img         String
  type        Type   @default(MOVIE)
  src         String
}

model Series {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  img         String
  type        Type     @default(SERIES)
  seasons     Season[]
}

model Season {
  id       Int        @id @default(autoincrement())
  episodes Episodes[]
  Series   Series?    @relation(fields: [seriesId], references: [id])
  seriesId Int?
}

model Episodes {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  src         String

  Season   Season? @relation(fields: [seasonId], references: [id])
  seasonId Int?
}

enum Type {
  MOVIE
  SERIES
  DOCUMENTARY
  ANIME
  CARTOON
}
